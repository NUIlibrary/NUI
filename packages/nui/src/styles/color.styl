for $i-key, $i-value in $nui-color {
  .bg-{$i-color} {
    background-color: s('var(%s-%s)', $i-value, $i);
  }

  .text-{$i-color} {
    color: s('var(%s-%s)', $i-value, $i);
  }

  for $i in 1...6 {
    .bg-{$i-key}-{$i} {
      background-color: s('var(%s-%s)', $i-value, $i);
    }

    .text-{$i-key}-{$i} {
      color: s('var(%s-%s)', $i-value, $i);
    }
  }
}