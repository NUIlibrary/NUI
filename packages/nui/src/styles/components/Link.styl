.n-link {
  text-decoration: none;
  cursor: pointer;
  margin-left: 1px;
  margin-right: 1px;

  &:hover {
    text-decoration: underline;
  }

  &.color-initial {
    color: initial;
  }

  &.no-underline {
    text-decoration: none;
  }

  &.disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
}